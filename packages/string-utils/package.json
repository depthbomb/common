{
	"name": "@depthbomb/string-utils",
	"description": "Common string utilities",
	"version": "0.1.0",
	"scripts": {
		"build": "tsup"
	},
	"packageManager": "yarn@3.2.1",
	"tsup": {
		"clean": true,
		"entry": [
			"src/index.ts"
		],
		"format": [
			"cjs",
			"esm"
		],
		"noExternal": [
			"lodash"
		],
		"minify": true,
		"skipNodeModulesBundle": false,
		"target": "node16",
		"tsconfig": "./tsconfig.json",
		"dts": true,
		"splitting": true,
		"sourcemap": false,
		"keepNames": false
	},
	"dependencies": {
		"lodash": "^4.17.21"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.182"
	}
}
